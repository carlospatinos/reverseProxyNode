#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../server');
var logger = require('../logger');
var debug = require('debug')('reverseproxynode:server');
var http = require('http');
var configuration = require('../configuration');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || configuration.app.port || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

//server.listen(port);
// app.listen(port, (logger = app.get('logger')) => {
//   logger.info("Starting app on port: %d", app.get('port'));
//   logger.info('Using this log configuration: %s', configuration.log.configFile);
// });

app.listen(port, () => {
  console.log("Starting app on port: %d", app.get('port'));
  console.log('Using this log configuration: %s', configuration.log.configFile);
});

server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
